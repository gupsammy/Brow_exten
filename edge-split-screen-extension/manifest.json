{
    "manifest_version": 3,
    "name": "Split Screen ChatGPT and Perplexity",
    "version": "1.0",
    "description": "Open ChatGPT and Perplexity in split screen mode.",
    "permissions": ["tabs", "activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }