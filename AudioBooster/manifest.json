{
    "manifest_version": 3,
    "name": "Audio Booster",
    "version": "1.2",
    "description": "Boost audio volume, enhance sound quality, and visualize audio",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": [
      "activeTab",
      "storage",
      "tabs"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "commands": {
      "toggle-audio-boost": {
        "suggested_key": {
          "default": "Ctrl+Shift+B",
          "mac": "Alt+Shift+B"
        },
        "description": "Toggle Audio Boost"
      }
    }
  }